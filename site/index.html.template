<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Helium Browser - Linux Repository</title>
    <meta name="description" content="Official Helium Browser repository for Linux. APT and RPM packages with ARM64 support.">
    <meta name="theme-color" content="#0f172a">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=IBM+Plex+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #0f172a;
            --bg-soft: #1e293b;
            --surface: #ffffff;
            --surface-alt: #f1f5f9;
            --ink: #0f172a;
            --ink-muted: #64748b;
            --ink-light: #94a3b8;
            --accent: #f97316;
            --accent-soft: #fed7aa;
            --accent-deep: #ea580c;
            --accent-hover: #fb923c;
            --border: #e2e8f0;
            --card: #ffffff;
            --mono: "IBM Plex Mono", ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
            --sans: "Space Grotesk", system-ui, sans-serif;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-md: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            --radius-sm: 8px;
            --radius-md: 12px;
            --radius-lg: 16px;
            --radius-xl: 20px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--sans);
            color: var(--ink);
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 50%, #e2e8f0 100%);
            min-height: 100vh;
            line-height: 1.6;
        }

        .backdrop {
            position: fixed;
            inset: 0;
            pointer-events: none;
            overflow: hidden;
            z-index: 0;
        }

        .orb {
            position: absolute;
            border-radius: 999px;
            opacity: 0.35;
        }

        .orb.one {
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(249, 115, 22, 0.15), transparent 70%);
            top: -200px;
            right: -150px;
            filter: blur(60px);
        }

        .orb.two {
            width: 450px;
            height: 450px;
            background: radial-gradient(circle, rgba(14, 165, 233, 0.12), transparent 70%);
            bottom: -200px;
            left: -150px;
            filter: blur(60px);
        }

        .shell {
            position: relative;
            z-index: 1;
            max-width: 1200px;
            margin: 0 auto;
            padding: clamp(40px, 6vw, 80px) clamp(24px, 4vw, 48px);
        }

        .hero {
            background: var(--card);
            border-radius: var(--radius-xl);
            padding: clamp(40px, 6vw, 64px);
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--border);
            display: grid;
            gap: 28px;
            overflow: hidden;
            position: relative;
            margin-bottom: 48px;
        }

        .hero::before {
            content: "-";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--accent), #0ea5e9, var(--accent));
        }

        .hero > * {
            position: relative;
            z-index: 1;
        }

        .brand {
            display: flex;
            align-items: center;
            gap: 16px;
            margin-bottom: 8px;
        }

        .brand img {
            width: 64px;
            height: 64px;
            border-radius: var(--radius-md);
            box-shadow: var(--shadow-md);
            border: 2px solid var(--border);
        }

        .brand span {
            font-weight: 600;
            letter-spacing: -0.01em;
            font-size: 1.15rem;
            color: var(--ink);
        }

        h1 {
            font-size: clamp(2.5rem, 5vw, 3.75rem);
            line-height: 1.1;
            letter-spacing: -0.04em;
            font-weight: 700;
            color: var(--ink);
            margin: 0;
        }

        .hero p {
            color: var(--ink-muted);
            max-width: 680px;
            font-size: 1.1rem;
            line-height: 1.7;
            margin: 0;
        }

        .cta-row {
            display: flex;
            flex-wrap: wrap;
            gap: 14px;
            margin-top: 8px;
        }

        .cta {
            background: var(--ink);
            color: var(--surface);
            padding: 14px 28px;
            border-radius: var(--radius-md);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            border: 2px solid transparent;
        }

        .cta.secondary {
            background: transparent;
            color: var(--ink);
            border: 2px solid var(--border);
        }

        .cta:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        .cta:not(.secondary):hover {
            background: var(--accent);
        }

        .cta.secondary:hover {
            border-color: var(--ink);
            background: var(--surface-alt);
        }

        .meta-row {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            margin-top: 4px;
            padding-top: 20px;
            border-top: 1px solid var(--border);
        }

        .chip {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: var(--surface-alt);
            padding: 10px 16px;
            border-radius: var(--radius-md);
            font-size: 0.9rem;
            color: var(--ink);
            border: 1px solid var(--border);
        }

        .chip strong {
            font-weight: 600;
            color: var(--accent-deep);
        }

        .sections {
            display: grid;
            gap: 32px;
        }

        .section {
            background: var(--card);
            padding: clamp(32px, 5vw, 48px);
            border-radius: var(--radius-xl);
            box-shadow: var(--shadow);
            border: 1px solid var(--border);
            transition: all 0.3s ease;
        }

        .section:hover {
            box-shadow: var(--shadow-md);
        }

        .section h2 {
            font-size: clamp(1.75rem, 3vw, 2.25rem);
            margin: 0 0 12px 0;
            letter-spacing: -0.02em;
            font-weight: 700;
            color: var(--ink);
        }

        .section > p {
            color: var(--ink-muted);
            font-size: 1.05rem;
            margin: 0 0 24px 0;
            line-height: 1.7;
        }

        .grid {
            margin-top: 8px;
            display: grid;
            gap: 20px;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        }

        .card {
            border: 1px solid var(--border);
            border-radius: var(--radius-lg);
            padding: 24px;
            background: var(--surface);
            display: grid;
            gap: 16px;
            transition: all 0.2s ease;
        }

        .card:hover {
            border-color: var(--accent);
            box-shadow: var(--shadow-md);
            transform: translateY(-2px);
        }

        .card h3 {
            font-size: 1.25rem;
            margin: 0;
            font-weight: 600;
            color: var(--ink);
        }

        .card > p {
            color: var(--ink-muted);
            font-size: 0.95rem;
            margin: 0;
            line-height: 1.6;
        }

        .support {
            display: inline-flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        .support span {
            background: var(--accent-soft);
            color: var(--accent-deep);
            padding: 4px 10px;
            border-radius: 999px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .code-block {
            border: 1px solid var(--border);
            border-radius: var(--radius-md);
            overflow: hidden;
            background: var(--surface-alt);
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.05);
        }

        .code-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 16px;
            background: var(--surface);
            border-bottom: 1px solid var(--border);
            font-size: 0.75rem;
            letter-spacing: 0.1em;
            text-transform: uppercase;
            color: var(--ink-muted);
            font-weight: 600;
        }

        .code-body {
            padding: 16px;
            font-family: var(--mono);
            font-size: 0.875rem;
            white-space: pre-wrap;
            word-break: break-word;
            color: var(--ink);
            line-height: 1.7;
        }

        .copy-btn {
            background: var(--ink);
            color: #ffffff;
            border: none;
            border-radius: var(--radius-sm);
            padding: 6px 12px;
            font-size: 0.75rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .copy-btn:hover {
            background: var(--accent);
            transform: translateY(-1px);
        }

        .download-package-group {
            margin-top: 32px;
        }

        .download-package-group:first-child {
            margin-top: 0;
        }

        .package-group-title {
            font-size: 1.35rem;
            font-weight: 600;
            margin: 0 0 20px 0;
            color: var(--ink);
            display: flex;
            align-items: center;
            gap: 12px;
            letter-spacing: -0.01em;
        }

        .package-group-title::before {
            content: "-";
            width: 5px;
            height: 24px;
            background: linear-gradient(180deg, var(--accent), var(--accent-hover));
            border-radius: 3px;
        }

        .download-grid {
            display: grid;
            gap: 12px;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        }

        .download-card {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: var(--radius-lg);
            padding: 24px;
            display: flex;
            flex-direction: column;
            gap: 16px;
            transition: all 0.2s ease;
            position: relative;
            overflow: hidden;
        }

        .download-card::before {
            content: "-";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--accent), #0ea5e9);
            opacity: 0;
            transition: opacity 0.2s ease;
        }

        .download-card:hover {
            border-color: var(--accent);
            box-shadow: var(--shadow-md);
            transform: translateY(-3px);
        }

        .download-card:hover::before {
            opacity: 1;
        }

        .download-card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 12px;
        }

        .download-card-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--ink);
            margin: 0;
        }

        .download-card-arch {
            background: var(--surface-alt);
            color: var(--ink);
            padding: 6px 12px;
            border-radius: var(--radius-sm);
            font-size: 0.75rem;
            font-weight: 600;
            font-family: var(--mono);
            letter-spacing: 0.02em;
            border: 1px solid var(--border);
        }

        .download-card-description {
            color: var(--ink-muted);
            font-size: 0.95rem;
            margin: 0;
            line-height: 1.6;
        }

        .download-link {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 12px 20px;
            border-radius: var(--radius-md);
            background: var(--ink);
            color: #ffffff;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.2s ease;
            margin-top: auto;
            border: 2px solid transparent;
        }

        .download-link::after {
            content: "-";
            font-size: 1.1rem;
            transition: transform 0.2s ease;
        }

        .download-link.disabled {
            background: var(--surface-alt);
            color: var(--ink-light);
            pointer-events: none;
            cursor: not-allowed;
            border-color: var(--border);
        }

        .download-link.disabled::after {
            content: "-";
        }

        .download-link:not(.disabled):hover {
            background: var(--accent);
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
            border-color: var(--accent);
        }

        .download-link:not(.disabled):hover::after {
            transform: translateY(3px);
        }

        details {
            border: 1px solid var(--border);
            border-radius: var(--radius-lg);
            overflow: hidden;
            margin-top: 16px;
            background: var(--surface-alt);
            transition: all 0.2s ease;
        }

        details:hover {
            border-color: var(--accent);
        }

        details[open] {
            background: var(--surface);
        }

        summary {
            cursor: pointer;
            padding: 18px 24px;
            font-weight: 600;
            list-style: none;
            color: var(--ink);
            transition: all 0.2s ease;
            user-select: none;
        }

        summary:hover {
            background: rgba(249, 115, 22, 0.05);
        }

        summary::-webkit-details-marker { display: none; }

        .details-body {
            padding: 0 24px 24px;
        }

        footer {
            margin-top: 64px;
            padding-top: 32px;
            border-top: 1px solid var(--border);
            text-align: center;
            color: var(--ink-muted);
            font-size: 0.9rem;
        }

        footer > div {
            margin-bottom: 16px;
        }

        footer a {
            color: var(--ink);
            text-decoration: none;
            margin: 0 12px;
            font-weight: 500;
            transition: color 0.2s ease;
        }

        footer a:hover {
            color: var(--accent);
            text-decoration: underline;
        }

        footer p {
            margin: 0;
            color: var(--ink-light);
            font-size: 0.85rem;
        }

        .toast {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            background: #0f172a;
            color: #ffffff;
            padding: 10px 16px;
            border-radius: 999px;
            font-size: 0.85rem;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.2s ease, transform 0.2s ease;
        }

        .toast.show {
            opacity: 1;
            transform: translateX(-50%) translateY(-6px);
        }

        @media (max-width: 768px) {
            .shell { padding: 32px 20px; }
            .hero { padding: 32px 24px; margin-bottom: 32px; }
            .section { padding: 28px 24px; }
            .cta-row { flex-direction: column; }
            .cta { width: 100%; justify-content: center; }
            .grid { grid-template-columns: 1fr; }
            .download-grid { grid-template-columns: 1fr; }
            .brand { flex-direction: column; align-items: flex-start; gap: 12px; }
            .meta-row { flex-direction: column; }
            .chip { width: fit-content; }
        }

        @media (prefers-reduced-motion: reduce) {
            * { scroll-behavior: auto; animation: none !important; transition: none !important; }
        }
    </style>
</head>
<body>
    <div class="backdrop">
        <div class="orb one"></div>
        <div class="orb two"></div>
    </div>

    <div class="toast" id="toast" role="status" aria-live="polite"></div>

    <main class="shell">
        <section class="hero">
            <div class="brand">
                <img src="https://avatars.githubusercontent.com/u/234597297?v=4" alt="Helium logo">
                <span>Helium Browser for Linux</span>
            </div>
            <h1>Reliable APT and RPM repository with ARM64 support.</h1>
            <p>Packages are built automatically from upstream releases. The repo publishes x86_64 and ARM64 builds with a single install command.</p>
            <div class="cta-row">
                <a class="cta" href="#install">Quick install</a>
                <a class="cta secondary" href="https://github.com/arvaidasre/helium-browser-deb/releases" target="_blank" rel="noopener">Release assets</a>
            </div>
            <div class="meta-row">
                <div class="chip">Stable <strong id="stableVersion">--</strong></div>
                <div class="chip" id="archChip">Architecture: detecting...</div>
            </div>
        </section>

        <div class="sections">
            <section class="section" id="install">
                <h2>Quick install</h2>
                <p>Use the one-liner install scripts. Both AMD64 and ARM64 are supported.</p>
                <div class="grid">
                    <div class="card">
                        <h3>Debian / Ubuntu</h3>
                        <p>Ubuntu, Debian, Linux Mint</p>
                        <div class="support">
                            <span>amd64</span>
                            <span>arm64</span>
                        </div>
                        <div class="code-block">
                            <div class="code-header">
                                <span>APT install</span>
                                <button class="copy-btn" data-copy="cmd-apt">Copy</button>
                            </div>
                            <div class="code-body" id="cmd-apt">curl -fsSL https://arvaidasre.github.io/helium-browser-deb/install.sh | bash</div>
                        </div>
                    </div>
                    <div class="card">
                        <h3>Fedora / RHEL</h3>
                        <p>Fedora, RHEL, CentOS, Rocky</p>
                        <div class="support">
                            <span>x86_64</span>
                            <span>aarch64</span>
                        </div>
                        <div class="code-block">
                            <div class="code-header">
                                <span>RPM install</span>
                                <button class="copy-btn" data-copy="cmd-rpm">Copy</button>
                            </div>
                            <div class="code-body" id="cmd-rpm">curl -fsSL https://arvaidasre.github.io/helium-browser-deb/install-rpm.sh | bash</div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="section" id="downloads">
                <h2>Direct downloads</h2>
                <p>Latest release packages for both architectures.</p>
                
                <div class="download-package-group">
                    <h3 class="package-group-title">Debian / Ubuntu packages</h3>
                    <div class="download-grid" id="downloadGridDeb">
                        <div class="download-card" data-type="deb" data-arch="amd64">
                            <div class="download-card-header">
                                <h4 class="download-card-title">AMD64</h4>
                                <span class="download-card-arch">amd64</span>
                            </div>
                            <p class="download-card-description">For 64-bit x86 processors</p>
                            <a class="download-link disabled" href="#">Loading...</a>
                        </div>
                        <div class="download-card" data-type="deb" data-arch="arm64">
                            <div class="download-card-header">
                                <h4 class="download-card-title">ARM64</h4>
                                <span class="download-card-arch">arm64</span>
                            </div>
                            <p class="download-card-description">For ARM-based systems</p>
                            <a class="download-link disabled" href="#">Loading...</a>
                        </div>
                    </div>
                </div>

                <div class="download-package-group">
                    <h3 class="package-group-title">Fedora / RHEL packages</h3>
                    <div class="download-grid" id="downloadGridRpm">
                        <div class="download-card" data-type="rpm" data-arch="x86_64">
                            <div class="download-card-header">
                                <h4 class="download-card-title">x86_64</h4>
                                <span class="download-card-arch">x86_64</span>
                            </div>
                            <p class="download-card-description">For 64-bit x86 processors</p>
                            <a class="download-link disabled" href="#">Loading...</a>
                        </div>
                        <div class="download-card" data-type="rpm" data-arch="aarch64">
                            <div class="download-card-header">
                                <h4 class="download-card-title">AArch64</h4>
                                <span class="download-card-arch">aarch64</span>
                            </div>
                            <p class="download-card-description">For ARM-based systems</p>
                            <a class="download-link disabled" href="#">Loading...</a>
                        </div>
                    </div>
                </div>
            </section>

            <section class="section" id="manual">
                <h2>Manual setup</h2>
                <p>Prefer full control? Add the repository manually.</p>

                <details>
                    <summary>APT repository</summary>
                    <div class="details-body">
                        <div class="code-block">
                            <div class="code-header">
                                <span>Manual APT</span>
                                <button class="copy-btn" data-copy="cmd-apt-manual">Copy</button>
                            </div>
                            <div class="code-body" id="cmd-apt-manual">echo "deb [arch=amd64,arm64] https://arvaidasre.github.io/helium-browser-deb/apt stable main" | sudo tee /etc/apt/sources.list.d/helium-browser.list
sudo apt update
sudo apt install helium-browser</div>
                        </div>
                    </div>
                </details>

                <details>
                    <summary>RPM repository</summary>
                    <div class="details-body">
                        <div class="code-block">
                            <div class="code-header">
                                <span>Manual RPM</span>
                                <button class="copy-btn" data-copy="cmd-rpm-manual">Copy</button>
                            </div>
                            <div class="code-body" id="cmd-rpm-manual">sudo tee /etc/yum.repos.d/helium.repo << 'EOF'
[helium]
name=Helium Browser
baseurl=https://arvaidasre.github.io/helium-browser-deb/rpm/$basearch
enabled=1
gpgcheck=0
EOF
sudo dnf install helium-browser</div>
                        </div>
                    </div>
                </details>
            </section>
        </div>

        <footer>
            <div>
                <a href="https://github.com/arvaidasre/helium-browser-deb" target="_blank" rel="noopener">GitHub</a>
                <a href="https://github.com/imputnet/helium-linux" target="_blank" rel="noopener">Upstream</a>
                <a href="https://github.com/arvaidasre/helium-browser-deb/issues" target="_blank" rel="noopener">Issues</a>
            </div>
            <p>&copy; 2025 Arvaidas Rekis</p>
        </footer>
    </main>

    <script>
        const repo = "arvaidasre/helium-browser-deb";

        function detectArch() {
            const ua = (navigator.userAgent || "").toLowerCase();
            if (ua.includes("aarch64") || ua.includes("arm64")) return "arm64";
            if (ua.includes("x86_64") || ua.includes("amd64") || ua.includes("x64")) return "amd64";
            return "unknown";
        }

        function showToast(message) {
            const toast = document.getElementById("toast");
            if (!toast) return;
            toast.textContent = message;
            toast.classList.add("show");
            clearTimeout(showToast._t);
            showToast._t = setTimeout(() => toast.classList.remove("show"), 1400);
        }

        async function copyText(text) {
            if (navigator.clipboard && window.isSecureContext) {
                await navigator.clipboard.writeText(text);
                return true;
            }
            const ta = document.createElement("textarea");
            ta.value = text;
            ta.setAttribute("readonly", "");
            ta.style.position = "fixed";
            ta.style.top = "-1000px";
            ta.style.left = "-1000px";
            document.body.appendChild(ta);
            ta.select();
            let ok = false;
            try {
                ok = document.execCommand("copy");
            } catch (e) {
                ok = false;
            }
            document.body.removeChild(ta);
            return ok;
        }

        function setupCopyButtons() {
            document.querySelectorAll(".copy-btn").forEach(btn => {
                btn.addEventListener("click", async () => {
                    const id = btn.getAttribute("data-copy");
                    const target = document.getElementById(id);
                    if (!target) return;
                    const text = target.textContent.trim();
                    try {
                        await copyText(text);
                        btn.textContent = "Copied";
                        showToast("Copied to clipboard");
                        setTimeout(() => { btn.textContent = "Copy"; }, 1200);
                    } catch (e) {
                        showToast("Copy failed - copy manually");
                    }
                });
            });
        }

        function mapAssets(assets) {
            const map = {
                deb: { amd64: null, arm64: null },
                rpm: { x86_64: null, aarch64: null }
            };

            assets.forEach(asset => {
                const name = asset.name.toLowerCase();
                if (name.endsWith(".deb")) {
                    if (name.includes("amd64") || name.includes("x86_64")) map.deb.amd64 = asset;
                    if (name.includes("arm64") || name.includes("aarch64")) map.deb.arm64 = asset;
                }
                if (name.endsWith(".rpm")) {
                    if (name.includes("x86_64") || name.includes("amd64")) map.rpm.x86_64 = asset;
                    if (name.includes("aarch64") || name.includes("arm64")) map.rpm.aarch64 = asset;
                }
            });

            return map;
        }

        function renderDownloads(assetMap) {
            document.querySelectorAll(".download-card").forEach(card => {
                const type = card.getAttribute("data-type");
                const arch = card.getAttribute("data-arch");
                const link = card.querySelector(".download-link");
                if (!link || !type || !arch) return;

                const asset = assetMap?.[type]?.[arch];
                if (asset) {
                    link.classList.remove("disabled");
                    link.textContent = "Download";
                    link.href = asset.browser_download_url;
                } else {
                    link.classList.add("disabled");
                    link.textContent = "Not available";
                }
            });
        }

        async function loadReleaseData() {
            try {
                const res = await fetch(`https://api.github.com/repos/${repo}/releases?per_page=10`);
                if (!res.ok) throw new Error("release fetch failed");
                const releases = await res.json();
                const stable = releases.find(r => !r.draft && !r.prerelease);
                const pre = releases.find(r => !r.draft && r.prerelease);
                const useRelease = stable || pre;

                if (useRelease) {
                    document.getElementById("stableVersion").textContent = useRelease.tag_name;
                    const assets = mapAssets(useRelease.assets || []);
                    renderDownloads(assets);
                }
            } catch (e) {
                document.getElementById("stableVersion").textContent = "v0.x";
                renderDownloads(null);
            }
        }

        function updateArchChip() {
            const arch = detectArch();
            const chip = document.getElementById("archChip");
            if (!chip) return;
            if (arch === "amd64") {
                chip.innerHTML = "Architecture: <strong>amd64</strong>";
            } else if (arch === "arm64") {
                chip.innerHTML = "Architecture: <strong>arm64</strong>";
            } else {
                chip.innerHTML = "Architecture: <strong>choose amd64/arm64</strong>";
            }
        }

        window.addEventListener("load", () => {
            setupCopyButtons();
            updateArchChip();
            loadReleaseData();
        });
    </script>
