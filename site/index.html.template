<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Helium Browser - Linux Repository</title>
    <meta name="description" content="Official Helium Browser repository for Linux. Signed APT and RPM packages with ARM64 support.">
    <meta name="theme-color" content="#0f172a">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=IBM+Plex+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #0f172a;
            --bg-soft: #1e293b;
            --surface: #ffffff;
            --surface-alt: #f8fafc;
            --ink: #0f172a;
            --ink-muted: #64748b;
            --ink-light: #94a3b8;
            --accent: #f97316;
            --accent-soft: #fff7ed;
            --accent-deep: #ea580c;
            --accent-hover: #fb923c;
            --border: #e2e8f0;
            --success: #10b981;
            --success-soft: #ecfdf5;
            --card: #ffffff;
            --mono: "IBM Plex Mono", ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
            --sans: "Space Grotesk", system-ui, sans-serif;
            --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
            --radius-sm: 6px;
            --radius-md: 10px;
            --radius-lg: 14px;
            --radius-xl: 18px;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: var(--sans);
            color: var(--ink);
            background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
            min-height: 100vh;
            line-height: 1.6;
        }

        .backdrop {
            position: fixed;
            inset: 0;
            pointer-events: none;
            overflow: hidden;
            z-index: 0;
        }

        .orb {
            position: absolute;
            border-radius: 999px;
            opacity: 0.4;
            filter: blur(80px);
        }

        .orb.one {
            width: 600px;
            height: 600px;
            background: radial-gradient(circle, rgba(249, 115, 22, 0.15), transparent 70%);
            top: -300px;
            right: -200px;
        }

        .orb.two {
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(14, 165, 233, 0.12), transparent 70%);
            bottom: -200px;
            left: -200px;
        }

        .shell {
            position: relative;
            z-index: 1;
            max-width: 1100px;
            margin: 0 auto;
            padding: clamp(32px, 5vw, 64px) clamp(20px, 4vw, 40px);
        }

        /* Header */
        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 48px;
            flex-wrap: wrap;
            gap: 16px;
        }

        .brand {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .brand img {
            width: 48px;
            height: 48px;
            border-radius: var(--radius-md);
            box-shadow: var(--shadow-md);
        }

        .brand-text {
            font-weight: 700;
            font-size: 1.25rem;
            letter-spacing: -0.02em;
        }

        .badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 12px;
            background: var(--success-soft);
            color: var(--success);
            border-radius: 999px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .badge::before {
            content: "";
            width: 6px;
            height: 6px;
            background: var(--success);
            border-radius: 50%;
        }

        /* Hero */
        .hero {
            text-align: center;
            margin-bottom: 56px;
        }

        .hero h1 {
            font-size: clamp(2.25rem, 5vw, 3.25rem);
            line-height: 1.15;
            letter-spacing: -0.03em;
            font-weight: 700;
            margin-bottom: 16px;
        }

        .hero p {
            color: var(--ink-muted);
            font-size: 1.15rem;
            max-width: 600px;
            margin: 0 auto 28px;
        }

        .features {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 12px;
            margin-bottom: 32px;
        }

        .feature {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: 999px;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .feature::before {
            content: "‚úì";
            color: var(--success);
            font-weight: 700;
        }

        .version-pill {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
            background: var(--ink);
            color: white;
            border-radius: 999px;
            font-family: var(--mono);
            font-size: 0.85rem;
            font-weight: 500;
        }

        /* Install Section */
        .install-section {
            background: var(--card);
            border-radius: var(--radius-xl);
            padding: clamp(28px, 4vw, 40px);
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--border);
            margin-bottom: 32px;
        }

        .install-tabs {
            display: flex;
            gap: 8px;
            margin-bottom: 24px;
            border-bottom: 1px solid var(--border);
            padding-bottom: 16px;
        }

        .tab {
            padding: 10px 20px;
            border: none;
            background: transparent;
            color: var(--ink-muted);
            font-family: var(--sans);
            font-size: 0.95rem;
            font-weight: 600;
            cursor: pointer;
            border-radius: var(--radius-md);
            transition: all 0.2s;
        }

        .tab:hover {
            background: var(--surface-alt);
            color: var(--ink);
        }

        .tab.active {
            background: var(--accent-soft);
            color: var(--accent-deep);
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        .quick-command {
            background: var(--surface-alt);
            border: 1px solid var(--border);
            border-radius: var(--radius-md);
            overflow: hidden;
        }

        .command-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 16px;
            background: var(--surface);
            border-bottom: 1px solid var(--border);
        }

        .command-label {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--ink-muted);
        }

        .copy-btn {
            padding: 6px 12px;
            border: none;
            background: var(--ink);
            color: white;
            border-radius: var(--radius-sm);
            font-size: 0.8rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

        .copy-btn:hover {
            background: var(--accent);
        }

        .command-body {
            padding: 16px;
            font-family: var(--mono);
            font-size: 0.85rem;
            overflow-x: auto;
            white-space: pre;
            color: var(--ink);
        }

        .gpg-note {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            margin-top: 20px;
            padding: 16px;
            background: var(--accent-soft);
            border-radius: var(--radius-md);
            border: 1px solid #fed7aa;
        }

        .gpg-note-icon {
            font-size: 1.25rem;
            flex-shrink: 0;
        }

        .gpg-note-text {
            font-size: 0.9rem;
            color: var(--ink);
        }

        .gpg-note-text strong {
            display: block;
            margin-bottom: 4px;
        }

        /* Details Section */
        .details-section {
            display: grid;
            gap: 20px;
            margin-bottom: 32px;
        }

        .detail-card {
            background: var(--card);
            border-radius: var(--radius-lg);
            padding: 24px;
            border: 1px solid var(--border);
            box-shadow: var(--shadow);
        }

        .detail-card h3 {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .arch-tags {
            display: flex;
            gap: 8px;
            margin-bottom: 16px;
        }

        .arch-tag {
            padding: 4px 10px;
            background: var(--surface-alt);
            border: 1px solid var(--border);
            border-radius: var(--radius-sm);
            font-family: var(--mono);
            font-size: 0.75rem;
            font-weight: 600;
        }

        .manual-steps {
            font-size: 0.9rem;
            color: var(--ink-muted);
        }

        .manual-steps ol {
            margin: 12px 0 0 20px;
            padding: 0;
        }

        .manual-steps li {
            margin-bottom: 8px;
        }

        /* Accordion */
        .accordion {
            background: var(--card);
            border-radius: var(--radius-lg);
            border: 1px solid var(--border);
            overflow: hidden;
            margin-bottom: 32px;
        }

        .accordion-item {
            border-bottom: 1px solid var(--border);
        }

        .accordion-item:last-child {
            border-bottom: none;
        }

        .accordion-header {
            width: 100%;
            padding: 18px 24px;
            background: none;
            border: none;
            text-align: left;
            font-family: var(--sans);
            font-size: 1rem;
            font-weight: 600;
            color: var(--ink);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: space-between;
            transition: background 0.2s;
        }

        .accordion-header:hover {
            background: var(--surface-alt);
        }

        .accordion-header::after {
            content: "+";
            font-size: 1.25rem;
            color: var(--ink-light);
            transition: transform 0.2s;
        }

        .accordion-item.active .accordion-header::after {
            transform: rotate(45deg);
        }

        .accordion-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

        .accordion-item.active .accordion-content {
            max-height: 500px;
        }

        .accordion-body {
            padding: 0 24px 24px;
        }

        /* Footer */
        footer {
            text-align: center;
            padding: 32px 0;
            color: var(--ink-muted);
            font-size: 0.9rem;
        }

        footer a {
            color: var(--ink);
            text-decoration: none;
            font-weight: 500;
            margin: 0 8px;
        }

        footer a:hover {
            color: var(--accent);
        }

        .footer-links {
            margin-bottom: 16px;
        }

        /* Toast */
        .toast {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            background: var(--ink);
            color: white;
            padding: 12px 20px;
            border-radius: 999px;
            font-size: 0.9rem;
            opacity: 0;
            pointer-events: none;
            transition: all 0.3s;
            z-index: 100;
        }

        .toast.show {
            opacity: 1;
            transform: translateX(-50%) translateY(-10px);
        }

        @media (max-width: 640px) {
            .install-tabs {
                flex-direction: column;
            }
            .tab {
                width: 100%;
                text-align: center;
            }
            .features {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
</head>
<body>
    <div class="backdrop">
        <div class="orb one"></div>
        <div class="orb two"></div>
    </div>

    <div class="toast" id="toast">Copied!</div>

    <main class="shell">
        <!-- Header -->
        <header class="header">
            <div class="brand">
                <img src="https://avatars.githubusercontent.com/u/234597297?v=4" alt="Helium logo">
                <span class="brand-text">Helium Browser</span>
            </div>
            <span class="badge">Repository Active</span>
        </header>

        <!-- Hero -->
        <section class="hero">
            <h1>Linux Repository</h1>
            <p>Official APT and RPM packages for Helium Browser. Signed, automated, and multi-arch ready.</p>
            <div class="features">
                <span class="feature">GPG Signed</span>
                <span class="feature">ARM64 Support</span>
                <span class="feature">Auto Updates</span>
            </div>
            <span class="version-pill" id="version">Loading...</span>
        </section>

        <!-- Install Section -->
        <section class="install-section">
            <div class="install-tabs">
                <button class="tab active" data-tab="debian">Debian / Ubuntu</button>
                <button class="tab" data-tab="fedora">Fedora / RHEL</button>
            </div>

            <!-- Debian Tab -->
            <div class="tab-content active" id="debian">
                <div class="quick-command">
                    <div class="command-header">
                        <span class="command-label">One-line installer</span>
                        <button class="copy-btn" onclick="copy('debian-cmd')">Copy</button>
                    </div>
                    <div class="command-body" id="debian-cmd">curl -fsSL https://arvaidasre.github.io/helium-browser-deb/install.sh | bash</div>
                </div>

                <div class="gpg-note">
                    <span class="gpg-note-icon">üîê</span>
                    <div class="gpg-note-text">
                        <strong>Signed Repository</strong>
                        Packages are GPG signed. The installer automatically imports the key. For manual setup, see instructions below.
                    </div>
                </div>
            </div>

            <!-- Fedora Tab -->
            <div class="tab-content" id="fedora">
                <div class="quick-command">
                    <div class="command-header">
                        <span class="command-label">One-line installer</span>
                        <button class="copy-btn" onclick="copy('fedora-cmd')">Copy</button>
                    </div>
                    <div class="command-body" id="fedora-cmd">curl -fsSL https://arvaidasre.github.io/helium-browser-deb/install-rpm.sh | bash</div>
                </div>

                <div class="gpg-note">
                    <span class="gpg-note-icon">üîê</span>
                    <div class="gpg-note-text">
                        <strong>Signed Repository</strong>
                        RPM packages and repository metadata are GPG signed. The installer handles key import automatically.
                    </div>
                </div>
            </div>
        </section>

        <!-- Details Section -->
        <section class="details-section">
            <div class="detail-card">
                <h3>üêß Debian / Ubuntu</h3>
                <div class="arch-tags">
                    <span class="arch-tag">amd64</span>
                    <span class="arch-tag">arm64</span>
                </div>
                <div class="manual-steps">
                    Supports: Ubuntu 20.04+ (focal, jammy, noble), Debian 11+ (bullseye, bookworm)
                </div>
            </div>

            <div class="detail-card">
                <h3>üé© Fedora / RHEL</h3>
                <div class="arch-tags">
                    <span class="arch-tag">x86_64</span>
                    <span class="arch-tag">aarch64</span>
                </div>
                <div class="manual-steps">
                    Supports: Fedora 39+, RHEL 9+, CentOS Stream, Rocky Linux, AlmaLinux
                </div>
            </div>
        </section>

        <!-- Accordion -->
        <div class="accordion">
            <div class="accordion-item">
                <button class="accordion-header" onclick="toggleAccordion(this)">
                    Manual APT Setup
                </button>
                <div class="accordion-content">
                    <div class="accordion-body">
                        <div class="quick-command">
                            <div class="command-header">
                                <span class="command-label">Import GPG key & add repository</span>
                                <button class="copy-btn" onclick="copy('apt-manual')">Copy</button>
                            </div>
                            <div class="command-body" id="apt-manual"># Download and import GPG key
wget -qO- https://arvaidasre.github.io/helium-browser-deb/apt/HELIUM-GPG-KEY | sudo gpg --dearmor -o /usr/share/keyrings/helium.gpg

# Add repository
echo "deb [arch=amd64,arm64 signed-by=/usr/share/keyrings/helium.gpg] https://arvaidasre.github.io/helium-browser-deb/apt stable main" | sudo tee /etc/apt/sources.list.d/helium.list

# Install
sudo apt update
sudo apt install helium-browser</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <button class="accordion-header" onclick="toggleAccordion(this)">
                    Manual RPM Setup
                </button>
                <div class="accordion-content">
                    <div class="accordion-body">
                        <div class="quick-command">
                            <div class="command-header">
                                <span class="command-label">Import GPG key & add repository</span>
                                <button class="copy-btn" onclick="copy('rpm-manual')">Copy</button>
                            </div>
                            <div class="command-body" id="rpm-manual"># Import GPG key
sudo rpm --import https://arvaidasre.github.io/helium-browser-deb/rpm/RPM-GPG-KEY-helium

# Add repository
sudo tee /etc/yum.repos.d/helium.repo << 'EOF'
[helium]
name=Helium Browser
baseurl=https://arvaidasre.github.io/helium-browser-deb/rpm/$basearch
enabled=1
gpgcheck=1
repo_gpgcheck=1
gpgkey=https://arvaidasre.github.io/helium-browser-deb/rpm/RPM-GPG-KEY-helium
EOF

# Install
sudo dnf install helium-browser</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <button class="accordion-header" onclick="toggleAccordion(this)">
                    Direct Downloads
                </button>
                <div class="accordion-content">
                    <div class="accordion-body">
                        <p style="margin-bottom: 16px; color: var(--ink-muted);">Download packages directly from the latest release:</p>
                        <div style="display: grid; gap: 12px; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));">
                            <a href="https://github.com/arvaidasre/helium-browser-deb/releases/latest" style="padding: 14px; background: var(--surface-alt); border: 1px solid var(--border); border-radius: var(--radius-md); text-decoration: none; color: var(--ink); text-align: center; font-weight: 500;">üì¶ Latest Release</a>
                            <a href="https://github.com/arvaidasre/helium-browser-deb/releases" style="padding: 14px; background: var(--surface-alt); border: 1px solid var(--border); border-radius: var(--radius-md); text-decoration: none; color: var(--ink); text-align: center; font-weight: 500;">üìã All Releases</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer>
            <div class="footer-links">
                <a href="https://github.com/arvaidasre/helium-browser-deb">GitHub</a>
                <a href="https://github.com/imputnet/helium-linux">Upstream</a>
                <a href="https://github.com/arvaidasre/helium-browser-deb/issues">Issues</a>
            </div>
            <p>&copy; 2025 Arvaidas Rekis ¬∑ <a href="https://github.com/arvaidasre/helium-browser-deb/blob/main/LICENSE">MIT License</a></p>
        </footer>
    </main>

    <script>
        // Tab switching
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                tab.classList.add('active');
                document.getElementById(tab.dataset.tab).classList.add('active');
            });
        });

        // Accordion
        function toggleAccordion(header) {
            const item = header.parentElement;
            const wasActive = item.classList.contains('active');
            
            document.querySelectorAll('.accordion-item').forEach(i => i.classList.remove('active'));
            
            if (!wasActive) {
                item.classList.add('active');
            }
        }

        // Copy function
        async function copy(id) {
            const text = document.getElementById(id).textContent;
            try {
                await navigator.clipboard.writeText(text);
                showToast('Copied to clipboard!');
            } catch (e) {
                showToast('Copy failed - copy manually');
            }
        }

        // Toast
        function showToast(msg) {
            const toast = document.getElementById('toast');
            toast.textContent = msg;
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 2000);
        }

        // Load version
        async function loadVersion() {
            try {
                const res = await fetch('https://api.github.com/repos/arvaidasre/helium-browser-deb/releases/latest');
                if (res.ok) {
                    const data = await res.json();
                    document.getElementById('version').textContent = data.tag_name;
                } else {
                    document.getElementById('version').textContent = 'v0.x';
                }
            } catch (e) {
                document.getElementById('version').textContent = 'v0.x';
            }
        }

        loadVersion();
    </script>
</body>
</html>
